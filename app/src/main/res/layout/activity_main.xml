<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gdcp.bujudemo.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
    <EditText
        android:id="@+id/et_1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"/>
    <EditText
        android:id="@+id/et_2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ff00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="4">
        <EditText
            android:id="@+id/et_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#079"/>
        <EditText
            android:id="@+id/et_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000fca"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="6">
    <TextView
        android:id="@+id/re_1"
        android:background="@color/colorAccent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        />
    <TextView
    android:background="@color/colorAccent"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_toLeftOf="@id/re_1"
    android:layout_below="@id/re_1"
    />
    <TextView
        android:background="@color/colorAccent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/re_1"
        android:layout_above="@id/re_1"
        />
    <TextView
        android:background="@color/colorAccent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/re_1"
        android:layout_below="@id/re_1"
        />
    <TextView
        android:background="@color/colorAccent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/re_1"
        android:layout_above="@id/re_1"
        />
    <TextView
        android:background="@color/colorAccent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>

    </LinearLayout>

</LinearLayout>
